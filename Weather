<body>
    <div class="container">
        <h2>üåç Weather Search</h2>
        <input type="text" id="location" placeholder="Enter city..." oninput="getCitySuggestions()">
        <div class="autocomplete" id="autocomplete-box"></div>
        <br>
        <button onclick="getWeather()">Search</button>
        <div id="weather"></div>
    </div>

    <script>
        const apiKey = '33f72d3be303409c35ec317e2c7aaa42';
        const countryNames = new Intl.DisplayNames(['en'], { type: 'region' });

        async function getCitySuggestions() {
            const input = document.getElementById('location').value.trim();
            if (input.length < 3) {
                document.getElementById('autocomplete-box').innerHTML = "";
                return;
            }

            const url = `https://api.openweathermap.org/geo/1.0/direct?q=${input}&limit=5&appid=${apiKey}`;
            const response = await fetch(url);
            const data = await response.json();

            let suggestions = "";
            data.forEach(city => {
                const fullCountryName = countryNames.of(city.country) || city.country;
                const displayCountry = fullCountryName.length > 10 ? city.country : fullCountryName;
                suggestions += `<div onclick="selectCity('${city.name}, ${displayCountry}')">${city.name}, ${displayCountry}</div>`;
            });

            document.getElementById('autocomplete-box').innerHTML = suggestions;
        }

        function selectCity(city) {
            document.getElementById('location').value = city;
            document.getElementById('autocomplete-box').innerHTML = "";
        }

        async function getWeather() {
            const location = document.getElementById('location').value.trim();
            if (!location) {
                document.getElementById('weather').innerHTML = `<p style="color: red;">‚ö†Ô∏è Please enter a location!</p>`;
                return;
            }

            let url = `https://api.openweathermap.org/data/2.5/weather?q=${location}&units=metric&appid=${apiKey}`;

            try {
                const response = await fetch(url);
                const data = await response.json();

                if (response.ok) {
                    document.getElementById('weather').innerHTML = `
                        <p><strong>üìç ${data.name}, ${data.sys.country}</strong></p>
                        <p>üå° Temperature: ${Math.round(data.main.temp)}¬∞C</p>
                        <p>‚òÅÔ∏è Weather: ${data.weather[0].description}</p>
                        <p>üí® Wind Speed: ${data.wind.speed} m/s</p>
                        <p>üåÖ Sunrise: ${new Date(data.sys.sunrise * 1000).toLocaleTimeString()}</p>
                        <p>üåá Sunset: ${new Date(data.sys.sunset * 1000).toLocaleTimeString()}</p>
                    `;
                } else {
                    document.getElementById('weather').innerHTML = `<p style="color: red;">‚ùå Location not found! Please check your input and try again.</p>`;
                }
            } catch (error) {
                document.getElementById('weather').innerHTML = `<p style="color: red;">üö® Error fetching data. Check your internet and API key!</p>`;
            }
        }
    </script>
</body>
